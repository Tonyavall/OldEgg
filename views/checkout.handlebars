{{#if logged_in}}
<div class="global-container">
    <header class="principal">
        <h1>Checkout</h1>
    </header>
    <main class="principal">
        <div class="cart-preview">
            {{#each cartProducts as |products|}}
            {{> checkout-details}}
            {{/each}}
            <div class="shipping">
                <span>Shipping</span><span>$0</span>
            </div>
            <div class="total">
                <span>Total</span><span>${{subTotal}}</span>
            </div>
        </div>
        <form id="checkout-form">
            <section>
                <h3>Contact information</h3>
                <div class="form-group">
                    <label for="email"></label>
                    <div>
                        <span class="material-icons"></span>
                        <input type="email" id="email" placeholder="Enter your email..." />
                    </div>
                </div>
                <div class="form-group">
                    <label for="phone"></label>
                    <div>
                        <span class="material-icons"></span>
                        <input type="number" id="phone" placeholder="Enter your phone..." />
                    </div>
                </div>
            </section>
            <section>
                <h3>Shipping address</h3>
                <div class="form-group">
                    <label for="fullname"></label>
                    <div>
                        <span class="material-icons"></span>
                        <input type="text" id="fullname" placeholder="Your full name..." />
                    </div>
                </div>
                <div class="form-group">
                    <label for="address"></label>
                    <div>
                        <span class="material-icons"></span>
                        <input type="text" id="address" placeholder="Your address..." />
                    </div>
                </div>
                <div class="form-group">
                    <label for="city"></label>
                    <div>
                        <span class="material-icons"></span>
                        <input type="text" id="city" placeholder="Your city..." />
                    </div>
                </div>
                <div class="form-groups">
                    <div class="form-group">
                        <label for="country">Country</label>
                        <div>
                            <span class="material-icons"></span>
                            <select>
                                <option>Your country...</option>
                                <option>United States</option>
                                <option>Germany</option>
                                <option>Greece</option>
                                <option>Spain</option>
                                <option>Canada</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="postal-code">Postal code</label>
                        <div>
                            <span class="material-icons"></span>
                            <input type="text" id="postal-code" placeholder="Your postal code..." />
                        </div>
                    </div>
                </div>
            </section>
            <div id="pcb-container">
                <button id="payment-checkout-btn">Checkout</button>
            </div>
        </form>
    </main>
</div>
<script src="/js/checkoutFromCart.js"></script>
{{/if}}